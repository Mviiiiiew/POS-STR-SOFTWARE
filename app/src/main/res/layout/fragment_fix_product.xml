<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/toolbarproduct"/>

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_back"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ย้อนกลับ"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:background="#795548"
        android:textSize="20sp"
        android:textStyle="bold"
        />


    <EditText

    android:id="@+id/editText_product"
    android:layout_width="600dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/my_toolbar"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="50dp"
    android:background="@color/thumbColor"
    android:hint="ชื่อสินค้า"
    android:padding="20dp"


    />


    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_edit_product"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText_product"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/editText_product"
        android:text="@string/save"

        >

    </com.gc.materialdesign.views.ButtonRectangle>

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_delete"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_edit_product"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/btn_edit_product"
        android:text="@string/delete"

        >

    </com.gc.materialdesign.views.ButtonRectangle>

</RelativeLayout>