<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/contentContainerfragment2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

    >

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/toolbarsaleproduct"/>


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="12dp"
        android:background="@android:color/transparent"
        android:paddingLeft="5dp"
        android:src="@drawable/ic_arrow_back"
        />

    <EditText
        android:id="@+id/edit_Barcode"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_back"
        android:hint="Barcode"

        android:inputType="number"
        android:nextFocusDown="@id/edit_Barcode"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/txt_cost"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/cardview_dark_background"
        android:freezesText="true"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_toolbar"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="0.2">

                <TextView
                    android:id="@+id/txt_ProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ชื่อสินค้า"
                    android:textSize="40dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/txt_ProductName"
                    android:layout_marginLeft="350dp"
                    android:layout_toRightOf="@+id/txt_ProductName"
                    android:text="ราคา"
                    android:textSize="40dp"
                    android:textStyle="bold"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.8"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_black"
                    android:layout_width="match_parent"

                    android:layout_height="5dp"
                    android:background="@color/colorBlack"/>


                <ListView
                    android:id="@+id/listView_SaleProduct"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    >

                </ListView>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:weightSum="3"

            >


            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/btn_clear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Clear"
                android:textSize="20sp"

                ></com.gc.materialdesign.views.ButtonRectangle>

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/btn_Pay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Pay"
                android:textSize="20sp"

                ></com.gc.materialdesign.views.ButtonRectangle>

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/btn_discount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Discount"
                android:textSize="20sp"

                ></com.gc.materialdesign.views.ButtonRectangle>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>