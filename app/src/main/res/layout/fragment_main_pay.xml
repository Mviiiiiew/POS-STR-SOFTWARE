<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:weightSum="2">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:background="@color/colorBlue"
        android:orientation="vertical"
        android:weightSum="2"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="ราคาสุทธิ"
                android:textSize="30sp"
                />

            <TextView

                android:id="@+id/txt_NameTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txt_Total"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="70dp"
                android:inputType="text"
                android:gravity="center"
                android:layout_toRightOf="@+id/txt_Total"
                android:background="#000000"

                android:textColor="#FFFFFF"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/txt_NameCash"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txt_Total"
                android:layout_below="@+id/txt_Total"
                android:layout_marginTop="50dp"
                android:text="รับชำระ"
                android:textSize="30sp"


                />

            <EditText
                android:id="@+id/edit_txt_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_alignBottom="@+id/txt_NameCash"
                android:layout_alignLeft="@+id/txt_NameTotal"
                android:layout_alignRight="@+id/txt_NameTotal"
                android:layout_toRightOf="@+id/txt_NameCash"
                android:textSize="30sp"
                android:ems="10"
                android:textStyle="bold"
                android:gravity="center"
                android:inputType="numberDecimal"

                />




        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:orientation="vertical"

           >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

            >

                <CheckBox
                    android:id="@+id/checkbox_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:freezesText="true"
                    android:layout_marginTop="10dp"
                    android:text="ตั้งค่าส่วนลด"
                    android:textSize="25sp"/>

                <EditText
                    android:id="@+id/editText_DiscountCost"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checkbox_discount"
                    android:layout_margin="15dp"
                    android:background="@color/thumbColor"
                    android:gravity="center"
                    android:hint="ราคาส่วนลด"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:textSize="20sp"
                    />

                <EditText
                    android:id="@+id/editText_DiscountPercent"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText_DiscountCost"
                    android:layout_margin="15dp"
                    android:background="@color/thumbColor"
                    android:gravity="center"
                    android:hint="เปอร์เซ็นต์ส่วนลด"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textSize="20sp"
                    />

                <RadioGroup
                    android:id="@+id/radiogroup_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checkbox_discount"
                    android:layout_marginLeft="10dp"

                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/editText_DiscountCost"
                    >

                    <RadioButton
                        android:id="@+id/radiobutton_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="คิดส่วนลดแบบจำนวนเงิน"
                        android:textSize="20sp"/>

                    <RadioButton
                        android:id="@+id/radiobutton_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="คิดส่วนลดแบบเปอร์เซ็นต์"
                        android:textSize="20sp"/>
                </RadioGroup>


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="5">

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_cost_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin_button_pay"
                    android:layout_weight="1"
                    android:background="@color/colorOrange"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/textsize_button_pay"/>

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_cost_10"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin_button_pay"
                    android:layout_weight="1"
                    android:background="@color/colorOrange"
                    android:text="10"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/textsize_button_pay"/>

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_cost_50"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin_button_pay"
                    android:layout_weight="1"
                    android:background="@color/colorOrange"
                    android:text="50"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/textsize_button_pay"/>

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_cost_500"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin_button_pay"
                    android:layout_weight="1"
                    android:background="@color/colorOrange"
                    android:text="500"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/textsize_button_pay"/>
                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_cost_025"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin_button_pay"
                    android:layout_weight="1"
                    android:background="@color/colorOrange"
                    android:text="0.25"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/textsize_button_pay"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="5">

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_cost_5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin_button_pay"
                    android:layout_weight="1"
                    android:background="@color/colorOrange"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/textsize_button_pay"/>

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_cost_20"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin_button_pay"
                    android:layout_weight="1"
                    android:background="@color/colorOrange"
                    android:text="20"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/textsize_button_pay"/>

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_cost_100"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin_button_pay"
                    android:layout_weight="1"
                    android:background="@color/colorOrange"
                    android:text="100"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/textsize_button_pay"/>

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_cost_1000"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin_button_pay"
                    android:layout_weight="1"
                    android:background="@color/colorOrange"
                    android:text="1,000"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/textsize_button_pay"/>

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_cost_050"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/layout_margin_button_pay"
                    android:layout_weight="1"
                    android:background="@color/colorOrange"
                    android:text="0.50"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/textsize_button_pay"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#000000"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
               android:layout_marginTop="10dp"
                android:checked="true"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:text="   Print"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_Pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:text="จ่าย"
                    android:textSize="@dimen/textsize_button">

                </com.gc.materialdesign.views.ButtonRectangle>

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/btn_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:text="ย้อกลับ"
                    android:textSize="@dimen/textsize_button">

                </com.gc.materialdesign.views.ButtonRectangle>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>