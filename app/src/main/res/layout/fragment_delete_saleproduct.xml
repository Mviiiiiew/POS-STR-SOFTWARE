<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/toolbarsaleproduct"/>


    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_back"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:text="ย้อนกลับ"
        android:textSize="20sp"
        android:textStyle="bold"
        >

    </com.gc.materialdesign.views.ButtonRectangle>

    <android.support.v7.widget.SearchView
        android:id="@+id/searchViewProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_back"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_toRightOf="@+id/btn_back"
        android:background="@color/colorWhite"


        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_toolbar"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txt_ProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="ชื่อสินค้า"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/txt_ProductName"
                    android:layout_marginLeft="500dp"
                    android:layout_toRightOf="@+id/txt_ProductName"
                    android:text="ราคา"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/txt_ProductName"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/txt_ProductName"
                    android:gravity="end"
                    android:text="ลบสินค้า"
                    android:textSize="30sp"
                    android:textStyle="bold"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.8"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_black"
                    android:layout_width="match_parent"

                    android:layout_height="5dp"
                    android:background="@color/colorBlack"/>


                <ListView
                    android:id="@+id/listView_SaleProductDelete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"


                    >

                </ListView>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>