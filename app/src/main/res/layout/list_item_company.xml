            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_company"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_NameDivision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
