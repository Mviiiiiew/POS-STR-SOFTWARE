<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#263238"
              android:orientation="vertical"
              android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_report_white_48dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="2"

        >


        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_Report_Print"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="พิมพ์รายงาน"
            android:background="#18FFFF"
            android:textSize="@dimen/textsize_productset"
            />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_Report_CSV"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="บันทึกรายงาน(.CSV)"
            android:background="#18FFFF"
            android:textStyle="bold"
            android:textSize="@dimen/textsize_productset"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>



</LinearLayout>