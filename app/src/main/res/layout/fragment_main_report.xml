<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#263238"
              android:orientation="vertical"
              android:padding="50dp"
              android:weightSum="2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:weightSum="3"

        >



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:src="@drawable/ic_report_white_48dp"/>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="3"

        >


        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_Report_day"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="0.93"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="สรุปยอดขายประจำวัน"
            android:background="#18FFFF"
            android:textSize="@dimen/textsize_productset"
            />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_Report_Product"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_margin="15dp"
            android:layout_weight="0.85"
            android:text="สรุปสินค้าที่ขายไป"
            android:background="#18FFFF"
            android:textStyle="bold"
            android:textSize="@dimen/textsize_productset"

            />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_Set_Product"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_weight="1.22"
            android:textStyle="bold"
            android:background="#18FFFF"
            android:text="สรุปยอดขายแยกรายละเอียด"
            android:textSize="@dimen/textsize_productset"
            />
    </LinearLayout>



</LinearLayout>