<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
        android:id="@+id/my_toolbar"
        layout="@layout/toolbarproduct"/>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="12dp"
        android:background="@android:color/transparent"
        android:paddingLeft="5dp"
        android:src="@drawable/ic_arrow_back"
        />
    <ImageView
        android:id="@+id/image_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_back"
        android:layout_toRightOf="@+id/btn_back"
        android:paddingLeft="25dp"
        android:src="@drawable/ic_add_shopping_cart_white_48dp"
        />

    <EditText

        android:id="@+id/editText_Product"
        android:hint="Product Name"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"
        android:background="@color/thumbColor"
        android:padding="20dp"


        />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_add"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText_Product"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@+id/editText_Product"
        android:text="Add Product OK "

        >

    </com.gc.materialdesign.views.ButtonRectangle>

</RelativeLayout>